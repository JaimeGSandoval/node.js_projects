<%- include('header') -%>


  <div id="login" class="text-center center-div">
    <div class="container w-25 border py-5">
      <div class="title pb-5">
        <h2 class="font-weight-bold">Login System</h2>
        <span>Log in for the existing server</span>
        <% if(locals.logout) {%>
          <div class="alert alert-success text-center mt-2">
            <%= logout %>
          </div>
          <%}%>
      </div>
      <form action="/route/login" method="POST">
        <div class="form-group pb-3">
          <input type="text" class="form-control" name="email" placeholder="email">
          <small class="form-text text-muted text-left">Register email address</small>
        </div>
        <div class="form-group pb-3">
          <input type="password" class="form-control" name="password" placeholder="password">
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>

  <%- include('footer') -%>
